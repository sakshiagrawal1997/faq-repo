<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Question</label>
        <input type="text" class="form-control" name="ques" placeholder="Question" value="{{employee.fullName}}">
        <div class="text-danger">
            {{employee.quesError}}</div>
    </div>
    <div class="form-group">
        <label>Answer</label>
        <input type="text" class="form-control" name="ans" placeholder="answer" value="{{employee.email}}">
        <div class="text-danger">
            {{employee.ansError}}</div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>